<?xml version="1.0" encoding="UTF-8"?>
<addons>

<addon id="plugin.video.vdev" name="Kodi Adult Add-on" version="1.0.0" provider-name="kokobarasi">
	<requires>
	    <import addon="script.module.six" />
        <import addon="script.module.kodi-six" />
		<import addon="inputstream.adaptive" />
		<import addon="script.module.unidecode" />
        <import addon="script.module.inputstreamhelper" />
		<import addon="inputstream.ffmpegdirect" />
		<import addon="script.module.simplejson" />
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.beautifulsoup4"     version="4.9.3"/>
		<import addon="script.module.requests"           version="2.31.0"/>
		<import addon="script.module.soupsieve"           version="2.4.1"/>
	</requires>

	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
		<platform>all</platform>
		<summary>Movies Streaming in Kodi.</summary>
        <description>Add-on for streaming adult content in Kodi.</description>
		<assets>
            <icon>resources/images/icon.png</icon>
            <fanart>resources/images/fanart.jpg</fanart>
        </assets>
	</extension>
</addon>


	<addon id="repository.kodidev" name="kokobarasi Respository" version="1.0.0" provider-name="kokobarasi">
		<extension point="xbmc.addon.repository" name="kokobarasi Respository">
			<dir>
				<info compressed="false">https://raw.githubusercontent.com/kokobarasi/repository.kodidev/main/zips/addons.xml</info>
				<checksum>https://raw.githubusercontent.com/kokobarasi/repository.kodidev/main/zips/addons.xml.md5</checksum>
				<datadir zip="true">https://raw.githubusercontent.com/kokobarasi/repository.kodidev/main/zips/</datadir>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>kokobarasi Respository for Kodi</summary>
			<description>Add-ons Repo for streaming adult contents from the web</description>
			<platform>all</platform>
		   <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
          </assets>
		</extension>
	</addon>
</addons>
